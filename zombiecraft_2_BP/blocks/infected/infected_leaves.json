{
  "format_version": "1.21.100",
  "minecraft:block": {
    "description": {
      "identifier": "zombie:infected_leaves",
        "menu_category": { "category": "nature" },
      "states": {
        "zombie:leaves_state": [0, 1, 2] 
      }
    },
    "components": {
      
      "minecraft:flammable": { "destroy_chance_modifier": 20, "catch_chance_modifier": 5 },
      "minecraft:display_name": "Infected Leaves_ticking",
       "minecraft:destructible_by_mining": {
        "seconds_to_destroy": 1.5
      },
      "minecraft:destructible_by_explosion": {
        "explosion_resistance": 1200
      },
      "minecraft:map_color": "#3C44AA",
      "minecraft:geometry": "minecraft:geometry.full_block",
      "minecraft:material_instances": {
        "*": {
          "texture": "zombie_infected_leaves",
          "render_method": "blend_to_opaque",
          "tint_method": "default_foliage",
          "ambient_occlusion": true,
          "face_dimming": true,
          "isotropic": true
        }
      },
      "minecraft:loot": "loot_tables/blocks/leaves/infected_leaves.json",
      "zombie:leaves": {},
      "minecraft:redstone_conductivity": {"allows_wire_to_step_down": true,
    "redstone_conductor": false},
    "minecraft:light_dampening": 4,
    "minecraft:tick": {
      "interval_range": [100,150],
      "looping": true
    }
    },
    
    "permutations": [
      {
        "condition": "query.block_state('zombie:leaves_state') == 0",
        "components": {
          "minecraft:tick": { "interval_range": [5, 10], "looping": true },
		  "zombie:leaves": {}
        }
      },
      {
        "condition": "query.block_state('zombie:leaves_state') == 2",
        "components": {
          "minecraft:tick": { "interval_range": [150, 300], "looping": true },
		  "zombie:leaves": {}
        }
      }
    ]
  }
}

  