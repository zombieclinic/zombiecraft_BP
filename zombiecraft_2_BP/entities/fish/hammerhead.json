{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "zombie:hammerhead",
            "is_spawnable": true,
            "is_summonable": true,
            "is_experimental": false
        },
        "component_groups": {
            "baby": {
                "minecraft:health": {
                    "value": 10,
                    "max": 10
                },
                "minecraft:scale": {
                    "value": 0.4
                },
                "minecraft:ageable": {
                    "duration": 1200,
                    "transform_to_item": "minecraft:fish"
                },
                "minecraft:behavior.follow_parent": {"priority": 0}
            },
            "adult": { 
                "minecraft:scale": {
                "value": 1
            },
            "minecraft:health": {
                "value": 20,
                "max": 20
            }
        },
            "player_hunter": {
                "minecraft:health": {
                    "value": 30,
                    "max": 30
                },
                "minecraft:scale": {
                    "value": 2
                },
                "minecraft:behavior.nearest_attackable_target": {
				"priority": 0,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 16
					}
				],
				"must_see": true
			},
            "minecraft:behavior.melee_attack": {
                "melee_fov": 90,
                "track_target": false,
                "random_stop_interval": 0,
                "reach_multiplier": 2,
                "attack_once": false,
                "require_complete_path": false,
                "cooldown_time": 2
            }
            },
            "death": {
                "minecraft:variant": {
                    "value": 1
                }
            }
        },
        "components": {
             "minecraft:loot": {
                "table": "loot_tables/custom_mobs/shark.json"
            },
            "minecraft:behavior.melee_box_attack": {
                "can_spread_on_fire": false,
                "priority": 3
              },
            "minecraft:underwater_movement": {
                "value": 0.10
            },
            "minecraft:jump.static": {
                "jump_power": 0.6
            },
            "minecraft:navigation.generic": {
                "is_amphibious": false,
                "can_path_over_water": false,
                "can_swim": true,
                "can_walk": false,
                "can_breach": false,
                "can_sink": false
            },
            "minecraft:behavior.swim_wander": {
                "interval": 0.00833,
                "look_ahead": 3,
                "priority": 0,
                "speed_multiplier": 1.5,
                "wander_time": 20
            },
            "minecraft:behavior.random_swim": {
                "priority": 3,
                "speed_multiplier": 1,
                "xz_dist": 32,
                "y_dist": 8,
                "interval": 20
            },
            "minecraft:nameable": {},
            "minecraft:type_family": {
                "family": [
                    "Shark",
                    "mob",
                    "monster"
                ]
            }, 
                 "minecraft:experience_reward": {
                "on_death": "!query.is_baby && query.last_hit_by_player ? Math.Random(1,3) : 0"
              },
            "minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					},
					{
						"cause": "drowning",
						"damage_per_tick": 1,
						"filters": {
							"all_of": [
								{
									"test": "in_block",
									"value": "water",
									"operator": "!="
								}
							]
						}}
					
				]
			},
            "minecraft:behavior.swim_idle": {
                "priority": 5,
                "idle_time": 5,
                "success_rate": 0.1
            },
            "minecraft:attack": {
                "damage": 4
            },
            "minecraft:movement.sway": {
                "sway_amplitude": 0
            },
            "minecraft:despawn": {
                "despawn_from_distance": {}
            },
            "minecraft:behavior.hurt_by_target": {
                "priority": 1
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:collision_box": {
	            "width": 3,
	            "height": 1
            },
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:leashable": {
                "soft_distance": 4,
                "hard_distance": 6,
                "max_distance": 10
            },
            "minecraft:conditional_bandwidth_optimization": {},
            "minecraft:healable": {
                "items": [
                    {
                        "item": "cod",
                        "heal_amount": 30
                    },
                    {
                        "heal_amount": 30,
                        "item": "salmon"
                    },
                    {
                        "heal_amount": 30,
                        "item": "tropical_fish"
                    }
                ]
            },
            "minecraft:on_death": "death"
            
        },
        "events": {
            "death":{
                "add": {
                    "component_groups": [
                        "death"
                    ]
                }
            },
            "minecraft:entity_spawned":{
                "randomize": [
                    {
                        "add": {
                            "component_groups": ["adult"]                         
                        },
                        "weight": 4
                    },
                    {
                        "add":{
                            "component_groups": [
                                "player_hunter"
                            ]
                        },
                        "weight": 1
                    },
                    {
                        "add": {
                            "component_groups": [
                                "baby"
                            ]
                        },
                        "weight": 2
                    }
                ]
            },
            "grow_up": {
                "randomize": [
                    {
                        "add": {
                            "component_groups": ["adult"]                         
                        },
                        "remove": {
                            "component_groups": [
                                "baby"
                            ]
                        },
                        "weight": 5
                    },
                    {
                        "add":{
                            "component_groups": [
                                "player_hunter"
                            ]
                        },
                        "remove": {
                            "component_groups": [
                                "baby"
                            ]
                        },
                        "weight": 1
                    }
                ]
            },
            "minecraft:entity_born": {
                "randomize": [
                    {
                        "add": {
                            "component_groups": ["adult"]                         
                        },
                        "weight": 6
                    },
                    {
                        "add":{
                            "component_groups": [
                                "player_hunter"
                            ]
                        },
                        "weight": 2
                    },
                    {
                        "add": {
                            "component_groups": [
                                "baby"
                            ]
                        },
                        "weight": 1
                    }
                ]
            }
        }
    }
}
