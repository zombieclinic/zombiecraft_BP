{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "zombie:shroomling",
            "is_spawnable": true,
            "is_summonable": true
        },
        "component_groups": {
            "hurt":{
				"minecraft:area_attack": {
					"damage_per_tick": 1,
					"damage_range": 3,
					"cause": "magic",
					"entity_filter": {
						"none_of": [
							{
								"test": "is_family",
								"value": "mush"
							}
						]
					}
				},
               "minecraft:mob_effect": {
                "effect_range": 3,
                "mob_effect": "poison"
               },
               "minecraft:skin_id": {
                "value": 1
               },
               "minecraft:timer": {
                "time": 1,
                "looping": true,
                "time_down_event": {
                    "event": "prime",
                    "target": "self"
                }
               }
            },
            "skin_id_0": {
                "minecraft:skin_id": {
                    "value": 0
                }
            },
            "shroomling_wild": {
                "minecraft:tameable": {
                    "probability": 1,
                    "tame_items": ["minecraft:bone_meal"],
                    "tame_event": {
                        "event": "minecraft:on_tame",
                        "target": "self"
                    }
                }
            },
            "shroomling_adult": {
				
                "minecraft:experience_reward": {
					"on_bred": "math.random(1,7)",
					"on_death": "query.last_hit_by_player?math.random(1,3):0"
				},
                "minecraft:behavior.breed": {
					"priority": 3,
					"speed_multiplier": 1
				},
				"minecraft:breedable": {
					"require_tame": false,
					"breed_items": "bone_meal",
					"breeds_with": {
						"mate_type": "zombie:shroomling",
						"baby_type": "zombie:shroomling",
						"breed_event": {
							"event": "minecraft:entity_born",
							"target": "baby"
						}
					}
				}
            },
            "shroomling_baby": {
	
                "minecraft:scale": {
                    "value": 0.10
                },
                "minecraft:ageable": {
                    "duration": 500,
					"feed_items": [
						"minecraft:bone_meal"
					],
                    "grow_up": {
                        "event": "grow_up",
                        "target": "self"
                    }
                }

            },
            "shroomling_tamed": {
				"minecraft:behavior.stay_while_sitting": {
				"priority": 0
			},
				"minecraft:is_tamed": {},
				"minecraft:health": {
					"value": 20,
					"max": 20
				},
				"minecraft:behavior.follow_owner": {
					"priority": 6,
					"speed_multiplier": 1,
					"start_distance": 10,
					"stop_distance": 2
				},
				"minecraft:attack": {
					"damage": 1,
					"effect_name": "poison",
					"effect_duration": 4
				},
				"minecraft:sittable": {},
				"minecraft:behavior.breed": {
					"priority": 2,
					"speed_multiplier": 1
				},
				"minecraft:behavior.owner_hurt_target": {
					"priority": 2
				},
				"minecraft:behavior.melee_attack": {
					"priority": 5
				},
				"minecraft:behavior.owner_hurt_by_target": {
					"priority": 1
				}
			}
        },
        "components": {
			"minecraft:mob_effect_immunity": {"mob_effects": ["poison"]},
			"minecraft:on_hurt": {
					"event": "hurt",
					"target": "self"
				},
				"minecraft:on_hurt_by_player": {
					"event": "hurt",
					"target": "self"
				},
			"minecraft:physics": {
				"has_gravity": true,
				"has_collision": true
			},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:push_through": {
				"value": 1
			},
			"minecraft:movement": {
				"value": 0.25
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:navigation.walk": {
				"avoid_water": true,
				"can_path_over_water": true,
				"avoid_damage_blocks": true
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:nameable": {
				"allow_name_tag_renaming": true
			},
			"minecraft:is_hidden_when_invisible": {},
			"minecraft:type_family": {
				"family": [
					"mush",
					"mob"
				]
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0
			},
			"minecraft:health": {
				"value": 10,
				"max": 10
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:behavior.panic": {
				"priority": 1,
				"speed_multiplier": 1.25
			},
			"minecraft:behavior.tempt": {
				"priority": 4,
				"speed_multiplier": 1.25,
				"items": [
					"bone_meal"
				]
			},
			"minecraft:behavior.random_stroll": {
				"priority": 6,
				"speed_multiplier": 0.8
			},
			"minecraft:behavior.look_at_player": {
				"priority": 7,
				"look_distance": 6,
				"probability": 0.02
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:leashable": {
				"soft_distance": 4,
				"hard_distance": 6,
				"max_distance": 10
			}
		},
        "events": {
            "minecraft:entity_spawned": {
				"randomize": [
					{
						"weight": 9,
						"add": {
							"component_groups": [
								"shroomling_wild",
								"shroomling_adult",
								"skin_id_0"
							]
						}
					},
					{
						"weight": 1,
						"add": {
							"component_groups": [
								"shroomling_baby",
								"shroomling_wild",
								"skin_id_0"
							]
						}
					}
				]
			},
			"minecraft:entity_born": {
				"add": {
					"component_groups": [
						"shroomling_baby",
						"shroomling_wild"
					]
				}
			},
            "hurt":{
                "remove": {
                    "component_groups": [
                        "skin_id_0"
                    ]
                },
                "add": {
                    "component_groups": [
                        "hurt"
                    ]
                }
            },
            "prime": {
                "remove": {
                    "component_groups": [
                        "hurt"
                    ]
                },
                "add": {
                    "component_groups": [
                        "skin_id_0"
                    ]
                }
            },
            "minecraft:on_tame": {
                "add": {
                    "component_groups": [
                        "shroomling_tamed"
                    ]
                }
            },
            "grow_up":{
                "add": {
                    "component_groups": [
                        "shroomling_adult"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "shroomling_baby"
                    ]
                }
            }
        }
    }
}